<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quizMultipleForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="12dp"
        android:background="#878787" />

    <TextView
        android:id="@+id/quiz_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:text="문제"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/quiz_content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="40dp"
        android:background="@drawable/rounded_corner_textinput"
        android:hint="문제를 입력하세요." />

    <TextView
        android:id="@+id/quiz_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="정답"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/quiz_answer_input01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_textinput"
                android:hint="1번 정답"
                android:padding="18dp" />

            <EditText
                android:id="@+id/quiz_answer_input02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_textinput"
                android:hint="2번 정답"
                android:padding="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/quiz_answer_input03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:padding="18dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_textinput"
                android:hint="   3번 정답" />

            <EditText
                android:id="@+id/quiz_answer_input04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_textinput"
                android:hint="4번 정답"
                android:padding="18dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/quiz_commentary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="해설"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/quiz_commentary_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner_textinput"
        android:hint="해설을 입력하세요(선택)"
        android:paddingHorizontal="18dp"
        android:paddingVertical="40dp" />

</LinearLayout>
